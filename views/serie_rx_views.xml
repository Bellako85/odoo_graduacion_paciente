<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- LISTA -->
    <record id="view_serie_rx_tree" model="ir.ui.view">
        <field name="name">optometria.serie.rx.tree</field>
        <field name="model">optometria.serie.rx</field>
        <field name="arch" type="xml">
            <tree string="Rangos de Series RX" editable="bottom">
                <field name="nombre_serie"/>
                <field name="esfera_min"/>
                <field name="esfera_max"/>
                <field name="cilindro_min"/>
                <field name="cilindro_max"/>
                <field name="activo" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    
    <!-- ACCIÃ“N -->
    <record id="action_serie_rx" model="ir.actions.act_window">
        <field name="name">Rangos de Series RX</field>
        <field name="res_model">optometria.serie.rx</field>
        <field name="view_mode">tree</field>
    </record>
    
</odoo>
